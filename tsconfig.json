{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"]
    }
  },

  "include": [
    "tests/**/*.ts",
    "Pages/**/*.ts",
    "tests/**/*.spec.ts",
    "tests-fixtures.ts"
  ],
  "exclude": [
    "node_modules",
    "playwright-report",
    "test-results",
    "screenshots",
    "tests/fixtures.ts"
  ]
}
